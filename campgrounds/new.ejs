<% layout('../layouts/boilerplate.ejs') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input type="text" id="title" name="campground[title]" class="form-control" required/>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="title">Location</label>
        <input type="text" id="location" name="campground[location]" class="form-control" required/>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload</label>
        <input class="form-control" type="file" id="image" name="campground[image]" multiple>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input type="number" name="campground[price]" id="price" class="form-control" aria-label="Price" placeholder="0.0" required>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Description</label>
        <textarea name="campground[description]" id="description" cols="30" rows="3" class="form-control" required></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>
